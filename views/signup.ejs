<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Signup</title>
</head>
<body>    
    <%- include('./partials/nav') %>

    <div class="container mt-4">

        <form action="/user/signup" method="POST">
            <div class="mb-3">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text"class="form-control"id="fullName"name="fullName"aria-describedby="fullName"placeholder="Enter your full name">                
            </div>
            <div class="mb-3">
                <label class="form-label" for="exampleInputEmail1">Email address</label>
                <input aria-describedby="emailHelp" type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" name="email">
                <div id="emailHelp" class="form-text">
                    We'll never share your email with anyone else.
                </div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input name="password"type="password"class="form-control"id="exampleInputPassword1"placeholder="Password" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>

    <%- include('./partials/scripts') %>
</body>
</html>